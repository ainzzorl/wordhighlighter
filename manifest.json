{
  "manifest_version": 2,
  "name": "Word Highlighter",
  "version": "0.0.1",
  "permissions": ["storage"],
  "applications": {
    "gecko": {
      "strict_min_version": "50.0"
    }
  },
  "background": {
    "scripts": [ "lib/dao.js", "lib/background.js", "scripts/background-script.js" ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [ "lib/dao.js", "scripts/content-script.js" ],
      "css": ["wordhighlighter.css"]
    }
  ]
}
